<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_padding"
        card_view:cardCornerRadius="4dp">-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding">

            <TextView
                android:id="@+id/sermon_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Das ist ein Titel fÃ¼r eine Predigt"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sermon_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sermon_title"
                android:text="Wilhelm Busch" />

            <TextView
                android:id="@+id/sermon_categorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/sermon_title"
                android:text="Predigt, Gottesdienst" />

            <TextView
                android:id="@+id/sermon_bible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sermon_author"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="Apostelgeschichte und noch gaaaanz viel kann da stehen aber maximal 2 zeilen waiel es dann nichts mehr anzigen sollte" />

            <TextView
                android:id="@+id/sermon_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/sermon_bible"
                android:text="01.01.2017" />

            <TextView
                android:id="@+id/sermon_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/sermon_bible"
                android:text="56:47" />

        </RelativeLayout>
<!--
    </android.support.v7.widget.CardView>
    -->

</LinearLayout>